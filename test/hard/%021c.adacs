-- $$021C -- adapted from the following ACVC test(s):
--   C24003A.TST
 
-- CHECK THAT LEADING ZEROES IN INTEGRAL & EXPONENT PARTS OF NUMERIC
-- LITERALS ARE IGNORED.
 
PACKAGE Main IS
 
BODY BEGIN
     WRITE("Test $$021C:");  WRITE(NEXT);
 
     IF 0000000000000000000000000000000000000000247 /= 247 THEN
             WRITE(NEXT);
             WRITE("==> LEADING ZEROES IN INTEGER LITERALS NOT IGNORED");
     END IF;
 
     IF 35E00000000000000000000000000000000000000001 /= 00000350.00000000 THEN
             WRITE(NEXT);
             WRITE("==> LEADING ZEROES IN EXPONENTS NOT IGNORED");
     END IF;
 
     WRITE(NEXT);
 
END Main;
