-- $B121C -- adapted from the following ACVC test(s):
--   C41106A-B.ADA
 
-- CHECK THAT ARRAYS HAVING BOUNDS OF INTEGER'FIRST, INTEGER'LAST,
--   CAN BE INDEXED AT THOSE BOUNDS.
 
 
PACKAGE Main IS
 
     INTEGER_FIRST : CONSTANT INTEGER := -2147483647;
     INTEGER_LAST  : CONSTANT INTEGER :=  2147483647;  -- 32-bit integer
 
BODY BEGIN
     WRITE("Test $B121C:");  WRITE(NEXT);
 
     DECLARE
 
          A1 : ARRAY (INTEGER_FIRST .. INTEGER_FIRST + 4) OF INTEGER;
          A2 : ARRAY (INTEGER_LAST - 4 .. INTEGER_LAST) OF BOOLEAN;
 
     BEGIN
          A1 (INTEGER_FIRST) := 1;
          IF A1 (INTEGER_FIRST) /= 1 THEN
               WRITE(NEXT);
               WRITE("==> WRONG VALUE USING INTEGER'FIRST");
          END IF;
 
          A2 (INTEGER_LAST) := FALSE;
          IF A2 (INTEGER_LAST) /= FALSE THEN
               WRITE(NEXT);
               WRITE("==> WRONG VALUE USING INTEGER'LAST");
          END IF;
 
     END;
 
     WRITE(NEXT);
END Main;
