-- $A031D -- adapted from the following ACVC test(s):
--   D55A03D-AB.ADA
 
-- CHECK THAT AN ARBITRARY LEVEL OF LOOP NESTING IS PERMITTED.
 
-- CHECK 17 LEVELS OF LOOP NESTING.
 
 
PACKAGE Main IS
 
 
     X : INTEGER := 1;
 
     COUNT : INTEGER := 0;
 
     DESCENDING  :  BOOLEAN  :=   TRUE ;
 
BODY BEGIN
 
     WRITE("Test $A031D:"; NEXT);
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
     LOOP
     EXIT WHEN  NOT DESCENDING ;
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
     LOOP
     EXIT WHEN  NOT DESCENDING ;
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
     LOOP
     EXIT WHEN  NOT DESCENDING ;
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
     LOOP
     EXIT WHEN  NOT DESCENDING ;
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
     LOOP
     EXIT WHEN  NOT DESCENDING ;
 
     FOR I IN X..1 LOOP
     WHILE  DESCENDING  LOOP
 
          COUNT := COUNT + 1;
          DESCENDING  :=   FALSE ;
 
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
     END LOOP;
 
     IF COUNT /= 1 THEN
          WRITE(NEXT; "==> LOOPS NOT EXECUTED PROPER NUMBER OF TIMES");
     END IF;
 
     WRITE(NEXT);
 
END Main;
