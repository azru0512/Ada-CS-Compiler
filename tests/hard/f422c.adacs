-- $F422C -- adapted from Babbage test #88
 
-- MATRIX MULTIPLIER --
 
PACKAGE Main IS
 
BODY
    X       : ARRAY (1..2,1..3) OF REAL;
    Y       : ARRAY (1..3,1..2) OF REAL;
    Z       : ARRAY (1..2,1..2) OF REAL;
    RVAL    : REAL;
 
    type MATRIX is array (INTEGER range <>, INTEGER range <>) of REAL;
 
    PROCEDURE MULT (A,B : IN MATRIX;
                    N,M,L : INTEGER;
                    C : OUT MATRIX) IS
    BEGIN
       FOR I IN 1 .. N LOOP
            FOR J IN 1 .. L LOOP
                 C(I,J):=0.0;
                 FOR K IN 1 .. M LOOP
                      C(I,J):=C(I,J)+ A(I,K)*B(K,J);
                 END LOOP;
            END LOOP;
       END LOOP;
    END MULT;
 
BEGIN
 WRITE("Test $F422C (w/ output):"; NEXT);
 
 RVAL:=1.0;
 FOR I IN 1 .. 2 LOOP
    FOR J IN 1 .. 3 LOOP
        X(I,J):=RVAL; RVAL:=RVAL+1.0; 
    END LOOP;
 END LOOP;
 RVAL:=1.0;
 FOR I IN 1 .. 3 LOOP
    FOR J IN 1 .. 2 LOOP
        Y(I,J):=RVAL; RVAL:=RVAL+1.0;
    END LOOP;
 END LOOP;
 MULT(X,Y,2,3,2,Z);      
 WRITE("X IS 2 X 3";NEXT);
 FOR I IN 1 .. 2 LOOP
    WRITE(X(I,1);X(I,2);X(I,3);NEXT);
 END LOOP;
 WRITE("Y IS 3 X 2";NEXT);
 FOR I IN 1 .. 3 LOOP
    WRITE(Y(I,1);Y(I,2);NEXT);
 END LOOP;
 WRITE("Z IS 2 X 2";NEXT);
 FOR I IN 1 .. 2 LOOP
    WRITE(Z(I,1);Z(I,2);NEXT);
 END LOOP;
 
END Main;
