-- $H021C
 
-- CHECK THAT 'FIRST AND 'LAST GIVE CORRECT RESULTS FOR SUBTYPES
 
PACKAGE Main IS
 
     SUBTYPE INT1 IS RANGE -1 .. 127;
     SUBTYPE INT2 IS INT1 RANGE INT1'FIRST + 1 .. INT1'LAST / 2;  -- 0..63
 
     SUBTYPE B IS RANGE TRUE .. TRUE;
     SUBTYPE B1 IS RANGE BOOLEAN'FIRST .. B'LAST;    -- FALSE..TRUE
 
     X, Y : INTEGER;
     J, K : BOOLEAN;
 
BODY BEGIN
     WRITE("Test $H021C:");  WRITE(NEXT);
 
     X := INT2'FIRST * 2;
     Y := INT1'LAST + INT2'LAST;
     J := X = Y;
     K := BOOLEAN'FIRST OR B1'FIRST;
 
  DECLARE
     SUBTYPE INT IS RANGE X .. Y;          -- 0 .. 190
     SUBTYPE BOO IS RANGE J .. K;          -- FALSE .. FALSE
 
  BEGIN
     IF INT'FIRST /= 0 OR INT'LAST /= 190
     OR BOO'FIRST /= FALSE OR BOO'LAST /= FALSE
     THEN
          WRITE(NEXT);
          WRITE("==> 'FIRST OR 'LAST GIVES WRONG WRITE(NEXT)S");
     END IF;
  END;
 
     WRITE(NEXT);
END Main;
